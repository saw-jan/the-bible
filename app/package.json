{
    "name": "thebible",
    "version": "1.2.0",
    "description": "Just a simple bible reading application for desktop environment",
    "author": "KinSae <me.kinsae@gmail.com>",
    "license": "MIT",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist-lnx": "electron-builder --linux",
        "dist-win": "electron-builder -w",
        "dist-mac": "electron-builder build --mac",
        "postinstall": "electron-builder install-app-deps",
        "git-push": "git push -u origin master",
        "rebuild": "electron-rebuild -f -w sqlite3",
        "deploy": "electron-builder build --linux --publish always",
        "build-all": "electron-builder build --mac --win --linux"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/saw-jan/the-bible.git"
    },
    "build": {
        "asar": true,
        "appId": "com.kinsae.thebible",
        "productName": "TheBible",
        "extraResources": [
            "./lib/",
            "./config/"
        ],
        "dmg": {
            "contents": [
                {
                    "x": 110,
                    "y": 150
                },
                {
                    "x": 240,
                    "y": 150,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        },
        "linux": {
            "artifactName": "the_bible_setup_v${version}.${ext}",
            "executableName": "thebible",
            "icon": "./build/icon.icns",
            "target": [
                "deb"
            ]
        },
        "win": {
            "target": "nsis",
            "icon": "build/icon.png",
            "requestedExecutionLevel": "highestAvailable",
            "publisherName": "KinSae"
        },
        "nsis": {
            "artifactName": "the_bible_setup_v${version}.${ext}",
            "oneClick": false,
            "perMachine": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "build/installerIcon.ico",
            "uninstallerIcon": "build/uninstallerIcon.ico",
            "installerSidebar": "build/installerSidebar.bmp",
            "uninstallerSidebar": "build/uninstallerSidebar.bmp",
            "deleteAppDataOnUninstall": true,
            "createStartMenuShortcut": true,
            "include": "build/installer.nsh",
            "allowElevation": true,
            "differentialPackage": true,
            "runAfterFinish": true,
            "shortcutName": "The Bible"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "saw-jan",
                "repo": "thebible-releases"
            }
        ]
    },
    "dependencies": {
        "electron-updater": "^4.2.5",
        "jquery": "^3.4.1",
        "knex": "^0.20.10",
        "node-fetch": "^2.6.0",
        "sqlite-cipher": "^0.3.6",
        "sqlite3": "^4.1.1"
    },
    "devDependencies": {
        "electron": "^8.0.0",
        "electron-builder": "^22.6.0",
        "electron-rebuild": "^1.10.1"
    }
}
